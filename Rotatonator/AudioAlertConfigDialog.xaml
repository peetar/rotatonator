<Window x:Class="Rotatonator.AudioAlertConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configure Audio Alerts" Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- On Heal Cast Section -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="On Heal Cast" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <CheckBox x:Name="HealerNumberCheckBox" Content="Healer number (e.g., &quot;One&quot;)" Margin="10,5,0,5"/>
            <CheckBox x:Name="HealerNameCheckBox" Content="Healer name" Margin="10,5,0,5"/>
            <CheckBox x:Name="TargetNameCheckBox" Content="Target name" Margin="10,5,0,5"/>
        </StackPanel>

        <!-- On My Turn Section -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="On My Turn" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <CheckBox x:Name="YoureNextCheckBox" Content="&quot;You're next&quot; warning (says &quot;Next&quot;)" Margin="10,5,0,5"/>
            <CheckBox x:Name="CastNowCheckBox" Content="&quot;Cast now&quot; (says &quot;Go&quot;)" Margin="10,5,0,5"/>
        </StackPanel>

        <!-- Audio Beeps Section -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Other Alerts" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <CheckBox x:Name="AudioBeepCheckBox" Content="Audio beep when any CH is cast" Margin="10,5,0,5"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Width="80" Height="30" Margin="0,0,10,0" Click="SaveButton_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Height="30" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
