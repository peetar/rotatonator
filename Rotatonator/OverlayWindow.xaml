<Window x:Class="Rotatonator.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rotatonator Overlay" 
        Height="100" Width="350"
        MinHeight="60" MaxHeight="600"
        SizeToContent="Height"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Left="100" Top="100">
    
    <Border x:Name="OverlayBorder" Background="#CC000000" CornerRadius="10" Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Chain Info -->
            <TextBlock Grid.Row="0"
                       x:Name="ChainInfoTextBlock"
                       FontSize="11"
                       Foreground="#AAAAAA"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>
            
            <!-- YOU'RE NEXT Warning -->
            <TextBlock Grid.Row="1"
                       x:Name="NextWarningTextBlock"
                       Text="YOU'RE NEXT!"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#FFD700"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8"
                       Visibility="Collapsed"/>
            
            <!-- Active Heals List -->
            <ItemsControl Grid.Row="2" x:Name="ActiveHealsItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#222222" 
                                CornerRadius="5" 
                                Padding="8" 
                                Margin="0,3">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="{Binding DisplayName}" 
                                               FontSize="13" 
                                               FontWeight="Bold"
                                               Foreground="{Binding TextColor}"/>
                                    
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding TimeRemaining}" 
                                               FontSize="13"
                                               FontWeight="Bold"
                                               Foreground="{Binding TextColor}"/>
                                </Grid>
                                
                                <ProgressBar Grid.Row="1"
                                             Height="12"
                                             Margin="0,4,0,0"
                                             Minimum="0"
                                             Maximum="{Binding TotalTime}"
                                             Value="{Binding ProgressValue}"
                                             Foreground="{Binding BarColor}"
                                             Background="#444444"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            <!-- DDR Scoreboard -->
            <Border Grid.Row="3" 
                    x:Name="ScoreboardPanel"
                    Background="#CC1A1A1A" 
                    CornerRadius="5" 
                    Padding="10"
                    Margin="0,10,0,0"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="ðŸ† SCOREBOARD ðŸ†"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="#FFD700"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    
                    <ItemsControl x:Name="ScoreboardItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding HealerName}"
                                               FontSize="12"
                                               Foreground="White"/>
                                    
                                    <TextBlock Grid.Column="1"
                                               FontSize="12"
                                               Foreground="#4CAF50"
                                               Margin="8,0">
                                        <Run Text="ðŸ”¥"/>
                                        <Run Text="{Binding CurrentStreak}"/>
                                    </TextBlock>
                                    
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding Score}"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="#FFD700"
                                               MinWidth="50"
                                               TextAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
